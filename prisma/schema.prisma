generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Root {
  id        Int     @id @default(autoincrement())
  firstname String?
  lastname  String?
  role      String?
  username  String?
  password  String? @default("default_password")
}

model User {
  id        Int     @id @default(autoincrement())
  firstname String?
  lastname  String?
  team      Team?   @relation(fields: [teamId], references: [id])
  teamId    Int?
  username  String? @unique
  password  String?
  points    Int?    @default(0)
}

model Team {
  id          Int           @id @default(autoincrement())
  name        String?
  description String?
  users       User[]
  tasks       Task[]
  projects    ProjectTeam[] // Change: Use a junction table
}

enum TaskStatus {
  NOT_STARTED
  STARTED
  TIME_EXPIRED
  WAITING
}

model Task {
  id          Int        @id @default(autoincrement())
  start       DateTime
  end         DateTime
  name        String?
  description String?
  status      TaskStatus
  plusPoint   Int?       @default(0)
  minusPoint  Int?       @default(0)
  team        Team?      @relation(fields: [teamId], references: [id])
  teamId      Int?
}

model Project {
  id          Int           @id @default(autoincrement())
  name        String?
  description String?
  start       DateTime      @default(now())
  end         DateTime
  teams       ProjectTeam[] // Change: Use a junction table
  Percentages Json
}

model ProjectTeam {
  id        Int     @id @default(autoincrement())
  team      Team    @relation(fields: [teamId], references: [id])
  teamId    Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}
